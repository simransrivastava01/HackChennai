<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryHighEmp</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryHighEmp</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurfaceHighEmp</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnSurfaceHighEmp</item>
        <item name="popupMenuBackground">?attr/colorSurface</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MoonShot.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MoonShot.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MoonShot.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MoonShot.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MoonShot.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MoonShot.Headline6</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MoonShot.Overline1</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- ColorPrimary corresponds to the color of a button in an alert dialog.-->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="MoonShot.Widget.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.MoonShot.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/space_mono</item>
    </style>

    <style name="TextAppearance.MoonShot.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/space_mono</item>
    </style>

    <style name="TextAppearance.MoonShot.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/space_mono</item>
    </style>

    <style name="TextAppearance.MoonShot.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/space_mono</item>
    </style>

    <style name="TextAppearance.MoonShot.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/space_mono</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MoonShot.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/space_mono</item>
    </style>

    <style name="TextAppearance.MoonShot.Overline1" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/space_mono</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextAppearance.MoonShot.Overline2" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/space_mono</item>
    </style>

    <style name="Widget.MoonShot.Error.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorError</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="TextAppearance.MoonShot.Error.Main" parent="TextAppearance.MoonShot.Headline6">
        <item name="android:textColor">?attr/colorOnError</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.MoonShot.Loading.Main" parent="TextAppearance.MoonShot.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MoonShot.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.MoonShot.Launch.Card" parent="Widget.MoonShot.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MoonShot.Launch.DetailCard" parent="Widget.MoonShot.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.MoonShot.Launch.Overline" parent="TextAppearance.MoonShot.Overline1">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.MoonShot.Launch.Headline" parent="TextAppearance.MoonShot.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.MoonShot.Launch.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/space_mono</item>
    </style>

    <style name="TextAppearance.MoonShot.Launch.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.MoonShot.LinkPreview.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.MoonShot.LinkPreview.Description" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.MoonShot.LinkPreview.LinkName" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>